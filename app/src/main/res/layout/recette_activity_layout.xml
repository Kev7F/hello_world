<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jaune_pale"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Titre de la recette -->
            <TextView
                android:id="@+id/titre_recette_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Titre de la recette"
                style="@style/style_ecriture_titres"
                android:textStyle="bold"/>

            <!-- Nombre de personnes -->
            <TextView
                android:id="@+id/nbr_personnes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nombre de personnes : "
                style="@style/style_ecriture_contenu_recette"
                android:textStyle="italic" />

            <!-- Section des ingrédients -->
            <TextView
                android:id="@+id/ingredients_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Ingrédients"
                style="@style/style_ecriture_sous_titres"/>

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Liste des ingrédients"
                style="@style/style_ecriture_contenu_recette"/>

            <!-- Section des étapes -->
            <TextView
                android:id="@+id/etapes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Étapes"
                style="@style/style_ecriture_sous_titres"/>

            <TextView
                android:id="@+id/etapes_recette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liste des étapes"
                style="@style/style_ecriture_contenu_recette"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
